# Provider selection
LLM_PROVIDER=openai         # openai | anthropic | mock
LLM_MODEL=gpt-4o-mini

# API keys (use 1Password / Vault in production; this file is for local dev only)
OPENAI_API_KEY=sk-...       # never commit a real key
ANTHROPIC_API_KEY=...

# Timeouts, retries, rate limits
LLM_TIMEOUT_S=20
LLM_RETRIES=2
LLM_RATE_PER_SEC=5          # optional

# Policy knobs
LLM_ALLOW_SHELL=false
LLM_URL_ALLOWLIST=https://example.com/docs,https://docs.company.com/

# Budgets
LLM_BUDGET_DAILY=100        # currency or token-units depending on estimator
LLM_BUDGET_PATH=.llm_safecall_budget.json
